@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HepsiOrada</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(to bottom, #6fa3ef, #2c6ed2);
            margin: 0;
            font-family: 'Arial', sans-serif;
        }

        
        .login-container {
            text-align: center;
            background-color: #ffffff;
            padding: 3rem;
            border-radius: 12px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

            .login-container h1 {
                font-size: 3rem;
                font-weight: bold;
                color: #2c6ed2;
                margin-bottom: 1rem;
            }

            .login-container h5 {
                font-size: 1.25rem;
                color: #6c757d;
                margin-bottom: 2rem;
            }

        
        .form-control {
            height: 45px;
            font-size: 1rem;
            border-radius: 8px;
            border: 1px solid #ced4da;
            padding: 0.75rem;
        }

            .form-control:focus {
                border-color: #2c6ed2;
                box-shadow: 0 0 5px rgba(44, 110, 210, 0.5);
            }

        
        .btn-primary {
            font-size: 1.1rem;
            padding: 0.75rem 1.5rem;
            background-color: #2c6ed2;
            border-color: #2c6ed2;
            border-radius: 8px;
            width: 100%;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #1a5f98;
                border-color: #1a5f98;
            }

        
        footer {
            position: absolute;
            bottom: 20px;
            width: 100%;
            text-align: center;
            color: #ffffff;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>HepsiOrada</h1>
        <h5>Eş Zamanlı Sipariş ve Stok Yönetimi</h5>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Error"]
            </div>
        }
        <form id="loginForm" method="post">
            <div class="mb-3">
                <input type="text" class="form-control" id="username" name="username" placeholder="Kullanıcı Adı" required />
            </div>
            <button type="button" class="btn btn-primary" onclick="openPanel()">Giriş Yap</button>
        </form>
    </div>

    <footer>
        &copy; 2024 HepsiOrada
    </footer>

    <script>
        function openPanel() {
            const username = document.getElementById("username").value;
            if (username) {
                let panelUrl;
                if (username === "admin") {
                    panelUrl = "/AdminPanel";
                } else {
                    panelUrl = `/CustomerPanel?customerName=${username}`;
                }
                window.open(panelUrl, "_blank"); 
            } else {
                alert("Kullanıcı adı giriniz!");
            }
        }
    </script>
</body>
</html>

